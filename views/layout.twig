</div>
<div id="noscript">
    Please enable Javascript to make this site works.
</div>
<script src="/js/vendor/browser_detector.js"></script>
<script>
    Element.prototype.remove = function () {
        this.parentElement.removeChild(this);
    };
    document.getElementById('noscript').remove();
</script>
{% block body %}{% endblock %}
<script>
    var browserDetector = new BrowserDetector();
    if(browserDetector.browser === 'Explorer' &&  browserDetector.version <= 9){
        document.getElementById('old-browser').style.display = 'block';
        document.getElementById('root').className = 'legacy';
    }
</script>
</body>
